#!/bin/bash

# Get the current directory
CURRENT_DIR="$(pwd)"

echo "üìÇ Scanning subdirectories in: $CURRENT_DIR"

# Iterate over all subdirectories
for dir in "$CURRENT_DIR"/*/; do
    # Check if the directory contains a .git folder (indicating a Git repo)
    if [ -d "$dir/.git" ]; then
        echo
        echo "üîÑ Pulling changes in: $dir"
        cd "$dir" || continue
        git pull
        cd "$CURRENT_DIR" || exit 1
    else
        echo "‚ö†Ô∏è Skipping $dir (Not a Git repository)"
    fi
done

echo
echo "‚úÖ All repositories updated."
